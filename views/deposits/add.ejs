
<h3>Add Customer Deposit</h3>

<form method="post" action="/deposits/add" class="row g-3">

  <div class="col-md-6">
    <select name="customer" class="form-select" required>
      <option value="">Select Customer</option>
      <% customers.forEach(c => { %>
        <option value="<%= c._id %>"><%= c.name %></option>
      <% }) %>
    </select>
  </div>

  <div class="col-md-6">
    <select name="mode" class="form-select" required>
      <option value="">Payment Mode</option>
      <option>Cash</option>
      <option>UPI</option>
      <option>Bank</option>
    </select>
  </div>

  <div class="col-md-6">
    <input type="number" name="amount" class="form-control" placeholder="Deposit Amount (â‚¹)" required>
  </div>

  <div class="col-12">
    <button class="btn btn-success">Save Deposit</button>
    <a href="/deposits" class="btn btn-secondary">Back</a>
  </div>

</form>