<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    /* HEADER */
    .topbar {
      height: 60px;
      background: linear-gradient(90deg, #ff9800, #ff5722);
      color: white;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      font-weight: bold;
    }

    .brand {
      font-size: 18px;
    }

    /* SIDEBAR */
    .sidebar {
      position: fixed;
      top: 60px;
      left: 0;
      height: calc(100vh - 60px);
      width: 230px;
      background-color: #fff3e0;
      border-right: 1px solid #ffe0b2;
      padding-top: 20px;
    }

    .sidebar a {
      display: block;
      padding: 12px 20px;
      color: #333;
      text-decoration: none;
      font-weight: 500;
      transition: 0.2s;
    }

    .sidebar a:hover {
      background-color: #ffe0b2;
      color: #ff5722;
    }

    /* CONTENT */
    .content {
      margin-left: 230px;
      margin-top: 60px;
      padding: 20px;
    }

    /* MOBILE */
    @media (max-width: 768px) {
      .sidebar {
        left: -230px;
        transition: 0.3s;
      }

      .sidebar.active {
        left: 0;
      }

      .content {
        margin-left: 0;
      }
    }

    .logout-btn {
      background-color: white;
      color: #ff5722;
      border: none;
      font-weight: bold;
    }

    .logout-btn:hover {
      background-color: #ffe0b2;
    }

  </style>
</head>

<body>

<!-- HEADER -->
<div class="topbar">
  <div>
    <button class="btn btn-sm btn-light d-md-none me-2" onclick="toggleSidebar()">‚ò∞</button>
    <span class="brand">üç± Shree Swami Samartha</span>
  </div>

  <div>
    <a href="/logout" class="btn logout-btn btn-sm">Logout</a>
  </div>
</div>

<!-- SIDEBAR -->
<div class="sidebar" id="sidebar">
  <a href="/dashboard">üìä Dashboard</a>
  <a href="/customers">üë• Customers</a>
  <a href="/payments">üí∞ Payments</a>
  <a href="/expenses">üßæ Expenses</a>
  <a href="/deposits">üè¶ Deposits</a>
  <a href="/reports/monthly">üìà Reports</a>
</div>

<!-- CONTENT -->
<div class="content">
  <%- body %>
</div>

<script>
  function toggleSidebar() {
    document.getElementById("sidebar").classList.toggle("active");
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
