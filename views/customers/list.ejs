
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Customers</h3>
  <a href="/customers/add" class="btn btn-primary">➕ Add Customer</a>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Mobile</th>
      <th>Tiffin</th>
      <th>Rate (₹)</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% customers.forEach(c => { %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.mobile %></td>
        <td><%= c.tiffinType %></td>
        <td><%= c.monthlyRate %></td>
        <td>
          <span class="badge <%= c.status === 'Active' ? 'bg-success' : 'bg-warning' %>">
            <%= c.status %>
          </span>
        </td>
        <td>
          <a href="/customers/toggle/<%= c._id %>" class="btn btn-sm btn-outline-secondary">
            <%= c.status === "Active" ? "Pause" : "Resume" %>
          </a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
