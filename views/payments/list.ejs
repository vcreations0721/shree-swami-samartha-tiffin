
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Payments</h3>
  <a href="/payments/add" class="btn btn-primary">➕ Add Payment</a>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Date</th>
      <th>Customer</th>
      <th>Type</th>
      <th>Month</th>
      <th>Amount (₹)</th>
      <th>Mode</th>
    </tr>
  </thead>
  <tbody>
    <% payments.forEach(p => { %>
      <tr>
        <td><%= p.date.toDateString() %></td>
        <td><%= p.customer?.name %></td>
        <td>
          <span class="badge <%= p.paymentType === 'Monthly' ? 'bg-info' : 'bg-secondary' %>">
            <%= p.paymentType %>
          </span>
        </td>
        <td><%= p.month || '-' %></td>
        <td><strong><%= p.amount %></strong></td>
        <td><%= p.mode %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
